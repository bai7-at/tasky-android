<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recentsEmptyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/recents_empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recents_empty_title_str"
        app:layout_constraintBottom_toTopOf="@+id/recents_empty_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/SaveEmptyViewTitle"/>
    <TextView
        android:gravity="center"
        android:id="@+id/recents_empty_desc"
        android:layout_width="@dimen/save_emptyview_desc_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/recents_empty_description_str"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recents_empty_title"
        style="@style/SaveEmptyViewDesc"/>
    <Button
        android:id="@+id/recent_login_button"
        android:visibility="gone"
        android:layout_width="@dimen/save_emptyview_button_width"
        android:layout_height="@dimen/save_emptyview_button_height"
        android:layout_marginTop="24dp"
        android:text="@string/login"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recents_empty_desc"
        style="@style/SaveEmptyViewButton"/>
    <Button
        android:id="@+id/recent_subscribe_button"
        android:visibility="gone"
        android:layout_width="@dimen/save_emptyview_button_width"
        android:layout_height="@dimen/save_emptyview_button_height"
        android:text="@string/save_create_account"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recent_login_button"
        app:layout_constraintTop_toTopOf="@+id/recent_login_button"
        style="@style/SaveEmptyViewButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationsBanner"
    android:background="@color/background_inverse_primary"
    android:padding="32dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <TextView
        android:id="@+id/bannerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banner_text"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bannerDismissBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/NotificationsBannerText"/>
    <Button
        android:id="@+id/bannerDismissBtn"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/banner_button_dismiss_text"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bannerSubscribeBtn"
        app:layout_constraintStart_toEndOf="@+id/bannerText"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/NotificationsBannerButton"/>
    <Button
        android:id="@+id/bannerSubscribeBtn"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/banner_button_subscribe_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bannerDismissBtn"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/NotificationsBannerButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>

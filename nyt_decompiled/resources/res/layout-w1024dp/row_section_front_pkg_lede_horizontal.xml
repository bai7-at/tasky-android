<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/default_ripple_background"
    android:paddingTop="20dp"
    android:paddingBottom="8dp"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/row_search_padding_left_right">
    <TextView
        android:gravity="center"
        android:id="@+id/row_sf_package_headline"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        style="@style/TextView.Section.Lede.Banner"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
    <LinearLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/row_section_front_lede_image_3col_incl"/>
    </LinearLayout>
    <com.nytimes.android.sectionfront.ui.FooterView
        android:id="@+id/footer_view"
        style="@style/SF_Footer"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/default_ripple_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.nytimes.android.designsystem.uiview.AspectRatioImageView
        android:id="@+id/sf_photo_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/kicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/sf_photo_video"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textColor="@color/headline_text"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sf_photo_video_item_title_top_margin"
        android:layout_below="@+id/kicker"
        android:layout_alignParentStart="true"
        style="@style/TextView.SFPhotoVideoTitle"/>
    <ImageView
        android:id="@+id/overlay"
        android:layout_width="@dimen/sf_photo_video_overlay_size"
        android:layout_height="@dimen/sf_photo_video_overlay_size"
        android:layout_marginBottom="@dimen/sf_photo_video_overlay_lft_bottom_padding"
        android:layout_alignBottom="@+id/sf_photo_video"
        android:layout_marginStart="@dimen/sf_photo_video_overlay_lft_bottom_padding"
        android:layout_alignStart="@+id/sf_photo_video"/>
</RelativeLayout>

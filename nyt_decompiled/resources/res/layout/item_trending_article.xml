<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:paddingTop="@dimen/daily_five_trending_top_padding"
    android:paddingBottom="@dimen/daily_five_trending_bottom_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/DailyFiveFeedItemLayout">
    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="2dp"
        android:text="@string/daily_five_opinion_label"
        app:layout_constraintBottom_toTopOf="@+id/promoText"
        app:layout_constraintEnd_toStartOf="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/DailyFive.Label"/>
    <TextView
        android:id="@+id/promoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label"
        style="@style/DailyFive.TrendingHeadline"/>
    <com.nytimes.android.designsystem.uiview.AspectRatioImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
</androidx.constraintlayout.widget.ConstraintLayout>

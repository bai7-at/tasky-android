<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/notification_top_spacing"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="0dp">
    <include layout="@layout/notification_header"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notification_rich_body_margin_top"
        android:layout_marginStart="@dimen/notification_rich_body_margin_start">
        <TextView
            android:textColor="@color/notification_header_text_color"
            android:ellipsize="marquee"
            android:gravity="top"
            android:layout_gravity="top"
            android:id="@+id/text"
            android:fadingEdge="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:paddingEnd="@dimen/notification_rich_text_padding"/>
        <ImageView
            android:id="@+id/big_picture"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/notification_rich_image_padding"
            android:layout_marginBottom="@dimen/notification_rich_image_padding"
            android:adjustViewBounds="true"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

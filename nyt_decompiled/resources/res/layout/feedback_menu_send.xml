<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Widget.Feedback.ActionButton">
    <ImageView
        android:layout_gravity="center"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/feedback_ic_send"
        android:stateListAnimator="@animator/feedback_animator_send"/>
    <ProgressBar
        android:layout_gravity="center"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/feedback_progress"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:stateListAnimator="@animator/feedback_animator_progress"
        style="@style/Widget.AppCompat.ProgressBar"/>
</FrameLayout>

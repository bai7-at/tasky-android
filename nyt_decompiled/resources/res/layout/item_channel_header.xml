<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <View style="@style/DailyFive.ChannelDivider"/>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/daily_five_feed_horizontal_spacing"
        android:paddingRight="@dimen/daily_five_feed_horizontal_spacing"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:textAppearance="@style/DailyFive.ChannelHeader"
            android:layout_gravity="center_vertical"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"/>
    </LinearLayout>
</LinearLayout>

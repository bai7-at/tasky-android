<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/daily_five_game_carousel_item_width"
    android:layout_height="wrap_content"
    android:layout_marginEnd="18dp">
    <ImageView
        android:id="@+id/gameIcon"
        android:layout_width="@dimen/daily_five_game_icon_size"
        android:layout_height="@dimen/daily_five_game_icon_size"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DailyFive.GamesHeadline"/>
    <TextView
        android:id="@+id/gameDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DailyFive.GamesDescription"/>
</LinearLayout>

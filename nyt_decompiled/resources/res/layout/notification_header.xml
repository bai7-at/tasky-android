<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/notification_header"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/notification_top_spacing"
    android:layout_marginStart="@dimen/notification_header_margin_start">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/notification_header_icon_size"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/notification_header_icon_margin_top"
        android:tint="@color/notification_header_icon_color"
        android:layout_marginEnd="@dimen/notification_header_icon_margin_end"
        app:srcCompat="@null"/>
    <TextView
        android:textSize="@dimen/notification_header_text_size"
        android:textColor="@color/notification_header_title_text_color"
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notification_header_text_margin_top"
        android:singleLine="true"
        android:layout_marginStart="@dimen/notification_header_text_margin_start"
        android:layout_marginEnd="@dimen/notification_header_margin_end"/>
    <TextView
        android:textSize="@dimen/notification_header_text_size"
        android:textColor="@color/notification_header_text_color"
        android:id="@+id/header_text_divider"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notification_header_text_margin_top"
        android:text="@string/notification_header_divider_symbol"
        android:layout_marginStart="@dimen/notification_header_text_margin_start"
        android:layout_marginEnd="@dimen/notification_header_margin_end"/>
    <TextView
        android:textSize="@dimen/notification_header_text_size"
        android:textColor="@color/notification_header_text_color"
        android:id="@+id/header_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notification_header_text_margin_top"
        android:singleLine="true"
        android:layout_marginStart="@dimen/notification_header_text_margin_start"
        android:layout_marginEnd="@dimen/notification_header_margin_end"/>
    <TextView
        android:textSize="@dimen/notification_header_text_size"
        android:textColor="@color/notification_header_text_color"
        android:id="@+id/time_divider"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notification_header_text_margin_top"
        android:text="@string/notification_header_divider_symbol"
        android:singleLine="true"
        android:layout_marginStart="@dimen/notification_header_text_margin_start"
        android:layout_marginEnd="@dimen/notification_header_margin_end"/>
    <DateTimeView
        android:textSize="@dimen/notification_header_text_size"
        android:textColor="@color/notification_header_text_color"
        android:layout_gravity="center"
        android:id="@+id/time"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notification_header_datetime_margin_top"
        android:singleLine="true"
        android:layout_marginStart="@dimen/notification_header_text_margin_start"
        android:layout_marginEnd="@dimen/notification_header_text_margin_end"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/profile_badge"
        android:paddingTop="@dimen/notification_header_image_padding"
        android:visibility="gone"
        android:layout_width="@dimen/notification_badge_size"
        android:layout_height="@dimen/notification_badge_size"
        android:layout_marginTop="@dimen/notification_header_text_margin_top"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/notification_header_image_margin_start"/>
</LinearLayout>

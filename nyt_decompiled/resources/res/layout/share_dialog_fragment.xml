<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="17sp"
        android:textColor="@color/ds_gray20"
        android:ellipsize="end"
        android:id="@+id/sharedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:maxLines="7"
        android:singleLine="false"
        android:lineSpacingExtra="5sp"
        android:fontFamily="@font/font_imperial_regular"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:lineHeight="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/horizontalView"
        android:background="#ff444444"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sharedText"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/ds_gray20"
        android:id="@+id/articleHeadline"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="4sp"
        android:fontFamily="@font/font_franklin_semi_bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/ds_gray20"
        android:id="@+id/journalist"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_franklin_medium"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/articleHeadline"/>
</androidx.constraintlayout.widget.ConstraintLayout>

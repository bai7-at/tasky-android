<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    style="@style/CardView.Default">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_recently_viewed_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/row_section_front_spacing_top_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/row_search_padding_left_right">
        <ImageView
            android:id="@+id/row_recently_viewed_picture"
            android:visibility="visible"
            android:layout_width="@dimen/search_thumbnail_width_and_height"
            android:layout_height="@dimen/search_thumbnail_width_and_height"
            android:layout_marginTop="@dimen/row_search_thumbnail_vertical_alignment_adjust"
            android:contentDescription="@string/widget_photos_photo_content_description"
            android:layout_marginEnd="@dimen/row_search_padding_left_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/row_recently_viewed_headline"
            app:layout_goneMarginStart="0dp"/>
        <ImageView
            android:id="@+id/row_recently_viewed_overlay"
            android:layout_width="@dimen/thumbnail_media_overlay_size"
            android:layout_height="@dimen/thumbnail_media_overlay_size"
            android:layout_marginBottom="@dimen/thumbnail_media_overlay_margin"
            android:contentDescription="@string/widget_photos_photo_content_description"
            android:layout_marginStart="@dimen/thumbnail_media_overlay_margin"
            app:layout_constraintBottom_toBottomOf="@+id/row_recently_viewed_picture"
            app:layout_constraintStart_toStartOf="@+id/row_recently_viewed_picture"/>
        <TextView
            android:id="@+id/row_recently_viewed_kicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4sp"
            android:textAllCaps="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/row_recently_viewed_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextView.Section.Kicker"/>
        <TextView
            android:id="@+id/row_recently_viewed_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:lineSpacingExtra="4sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/row_recently_viewed_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/row_recently_viewed_kicker"
            app:layout_goneMarginTop="0dp"
            style="@style/TextView.Section.Headline"/>
        <TextView
            android:textColor="@color/summary_text"
            android:id="@+id/row_recently_viewed_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="7sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/row_recently_viewed_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/row_recently_viewed_headline"
            style="@style/TextView.SFSummary"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/content_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="row_recently_viewed_summary, row_recently_viewed_picture"/>
        <TextView
            android:id="@+id/row_recently_viewed_last_accessed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="19dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/row_recently_viewed_save_icon"
            style="@style/SF_FooterText.TimeStampText"/>
        <TextView
            android:id="@+id/row_recently_viewed_comment_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="19dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/row_recently_viewed_picture"
            app:layout_constraintStart_toEndOf="@+id/row_recently_viewed_last_accessed"
            app:layout_constraintTop_toTopOf="@+id/row_recently_viewed_save_icon"
            style="@style/SF_FooterText.CommentCount"/>
        <ImageView
            android:id="@+id/row_recently_viewed_save_icon"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/section_save_content_descrip"
            android:paddingEnd="@dimen/row_section_front_spacing_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/row_recently_viewed_share_icon"
            app:layout_constraintTop_toBottomOf="@+id/content_barrier"
            app:layout_constraintVertical_bias="1"
            app:srcCompat="@drawable/selector_ic_save"
            app:tint="@color/ds_blue30"
            style="@style/SF_Footer_Tool"/>
        <ImageView
            android:id="@+id/row_recently_viewed_share_icon"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/section_share_content_decrip"
            android:paddingEnd="@dimen/row_section_front_spacing_start"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_barrier"
            app:layout_constraintVertical_bias="1"
            app:srcCompat="@null"
            app:tint="@color/ds_blue30"
            style="@style/SF_Footer_Tool"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

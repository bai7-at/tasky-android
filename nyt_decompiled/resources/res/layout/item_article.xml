<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/DailyFiveFeedItemLayout">
    <TextView
        android:id="@+id/kicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DailyFive.Kicker"/>
    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_five_opinion_label"
        style="@style/DailyFive.Label"/>
    <TextView
        android:id="@+id/promoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/DailyFive.PromoText"/>
    <com.nytimes.android.designsystem.uiview.AspectRatioImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/DailyFive.Credit"/>
</LinearLayout>

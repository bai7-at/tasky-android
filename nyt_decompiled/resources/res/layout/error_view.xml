<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/error_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/error_text_notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:id="@+id/offline_error_view"
            android:visibility="gone"
            android:layout_width="@dimen/offline_icon_width"
            android:layout_height="@dimen/offline_icon_height"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/generic_error_view"
            android:visibility="gone"
            android:layout_width="@dimen/generic_error_icon_width"
            android:layout_height="@dimen/generic_error_icon_height"/>
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="top|center_horizontal"
        android:id="@+id/error_text_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/error_page_notice_top_margin"
        app:layout_constraintBottom_toTopOf="@+id/back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_image_container"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/noticeTextStyle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="16sp"
        android:id="@+id/back_btn"
        android:layout_width="@dimen/error_button_width"
        android:layout_height="@dimen/error_button_height"
        android:layout_marginTop="@dimen/error_page_button_top_margin"
        android:text="@string/offline_view_btn_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_text_notice"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/primaryButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>

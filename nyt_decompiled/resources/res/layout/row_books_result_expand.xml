<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nytimes.android.bestsellers.BookDialogView
        android:orientation="horizontal"
        android:id="@+id/card_view_expanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/books_dialog_background"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/llExpandArea"
            android:background="@color/books_dialog_background"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:insetLeft="16dp"
            android:insetRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/internal_layout"
                android:background="@color/books_dialog_background"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/books_image_expanded"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/books_title"
                    android:id="@+id/books_title_expanded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/bookTitle"
                    android:fontFamily="@font/font_franklin_bold"
                    android:layout_marginStart="0dp"
                    android:layout_toStartOf="@+id/books_image_expanded"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/books_author"
                    android:id="@+id/books_author_expanded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/bookAuthor"
                    android:layout_below="@+id/books_title_expanded"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="@font/font_imperial_regular"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@+id/books_image_expanded"
                    android:layout_alignStart="@+id/books_title_expanded"/>
                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:id="@+id/internal_layout_in"
                    android:background="@color/books_dialog_background"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/books_author_expanded"
                    android:layout_alignStart="@+id/books_title_expanded">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/books_rank_expanded"
                        android:id="@+id/books_rank_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/bookRank"
                        android:fontFamily="@font/font_franklin_medium"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/books_rank_expanded"
                        android:gravity="bottom"
                        android:id="@+id/rank_last_week_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/bookRankLastWeek"
                        android:layout_below="@+id/books_rank_expanded"
                        android:fontFamily="@font/font_franklin_medium"/>
                    <ImageView
                        android:id="@+id/rank_image_expanded"
                        android:background="@color/books_dialog_background"
                        android:layout_width="@dimen/arrow_width"
                        android:layout_height="@dimen/arrow_height"
                        android:src="@null"
                        android:layout_alignTop="@+id/books_rank_expanded"
                        android:layout_alignBottom="@+id/books_rank_expanded"
                        android:rotation="90"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/books_rank_expanded"/>
                    <ImageView
                        android:id="@+id/rank_image_down_expanded"
                        android:background="@color/books_dialog_background"
                        android:layout_width="@dimen/arrow_width"
                        android:layout_height="@dimen/arrow_height"
                        android:src="@null"
                        android:layout_alignTop="@+id/books_rank_expanded"
                        android:layout_alignBottom="@+id/books_rank_expanded"
                        android:rotation="270"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/rank_image_expanded"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/books_num_of_weeks_expanded"
                        android:id="@+id/books_num_of_weeks_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/rank_last_week_expanded"
                        android:fontFamily="@font/font_franklin_medium"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/books_rank_expanded"
                android:id="@+id/books_summary_expanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="@string/bookSummary"
                android:layout_below="@+id/internal_layout"
                android:lineSpacingExtra="4sp"
                android:fontFamily="@font/font_imperial_regular"
                android:layout_marginEnd="16dp"
                android:layout_alignStart="@+id/internal_layout"/>
            <View
                android:id="@+id/books_space_line"
                android:background="@color/ds_grayCC"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="23dp"
                android:layout_below="@+id/books_summary_expanded"
                android:layout_marginEnd="16dp"
                android:layout_alignStart="@+id/books_summary_expanded"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/ds_blue_link"
                android:id="@+id/books_review_expanded"
                android:background="@drawable/light_ripple_background"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/bookReview"
                android:layout_below="@+id/books_space_line"
                android:fontFamily="@font/font_franklin_medium"
                android:layout_alignStart="@+id/books_summary_expanded"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/ds_blue_link"
                android:id="@+id/sunday_book_review_expanded"
                android:background="@drawable/light_ripple_background"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/bookSundayReview"
                android:layout_below="@+id/books_review_expanded"
                android:fontFamily="@font/font_franklin_medium"
                android:layout_alignStart="@+id/books_summary_expanded"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/ds_blue_link"
                android:id="@+id/first_chapter_expanded"
                android:background="@drawable/light_ripple_background"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/bookFirstChapter"
                android:layout_below="@+id/sunday_book_review_expanded"
                android:fontFamily="@font/font_franklin_medium"
                android:layout_alignStart="@+id/books_summary_expanded"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/ds_blue_link"
                android:id="@+id/selected_chapter_expanded"
                android:background="@drawable/light_ripple_background"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/bookSelectedChapter"
                android:layout_below="@+id/first_chapter_expanded"
                android:fontFamily="@font/font_franklin_medium"
                android:layout_alignStart="@+id/books_summary_expanded"/>
        </RelativeLayout>
    </com.nytimes.android.bestsellers.BookDialogView>
</ScrollView>

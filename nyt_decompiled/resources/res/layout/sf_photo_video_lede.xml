<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:nyt="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/default_ripple_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nytimes.android.designsystem.uiview.AspectRatioImageView
            android:layout_gravity="center"
            android:id="@+id/sf_photo_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            nyt:aspectRatioOption="ratio_2x1"/>
        <ImageView
            android:layout_gravity="start|bottom"
            android:id="@+id/overlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"/>
    </FrameLayout>
    <TextView
        android:textColor="@color/sf_text_color"
        android:id="@+id/kicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:textSize="22sp"
        android:textColor="@color/headline_text"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="6dp"
        android:fontFamily="@font/font_chelt_light"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/account_benefits_toolbar_id"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:backgroundTint="@color/account_benefits_toolbar"
            app:navigationIcon="@null"
            app:title="@string/account_benefits_title"
            app:titleTextColor="@color/account_benefits_title"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/check_icon"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_account_benefits_check"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="36sp"
                android:textColor="@color/account_benefits_text"
                android:id="@+id/thank_you_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/account_benefits_thank_you"
                android:fontFamily="@font/font_chelt_medium"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:lineHeight="47sp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14sp"
                android:textColor="@color/account_benefits_text"
                android:gravity="center"
                android:id="@+id/supporting_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/account_benefits_supporting_message"
                android:fontFamily="@font/font_franklin_medium"
                android:textAlignment="center"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                app:lineHeight="18sp"/>
            <FrameLayout
                android:id="@+id/notifications_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="30dp"/>
            <Button
                android:textSize="16sp"
                android:textColor="@color/ds_times_white"
                android:id="@+id/save_and_continue"
                android:background="@drawable/outlined_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/account_benefits_button_text"
                android:textAllCaps="false"
                android:fontFamily="@font/font_franklin_medium"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="right"
    android:id="@+id/compass"
    android:layout_width="@dimen/compass_dimen"
    android:layout_height="@dimen/compass_dimen"
    android:layout_alignParentEnd="true">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/compass_border"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/cone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/compass_cone_gradient"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/eyes"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="-3dp"
        android:src="@drawable/compass_eyes"
        android:layout_below="@+id/cone"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:id="@+id/card_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <TextView
            android:textSize="32sp"
            android:textColor="@color/books_rank"
            android:gravity="center"
            android:id="@+id/books_rank"
            android:layout_width="@dimen/book_image_width"
            android:layout_height="@dimen/book_image_height"
            android:layout_marginTop="7dp"
            android:text="@string/bookRank"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/font_franklin_light"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/rank_arrow"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="@dimen/arrow_height"
            android:src="@null"
            android:layout_below="@+id/books_rank"
            android:rotation="90"
            android:layout_alignStart="@+id/books_rank"
            android:layout_alignEnd="@+id/books_rank"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/books_title"
            android:id="@+id/books_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/bookTitle"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/font_franklin_bold"
            android:layout_toStartOf="@+id/books_image"
            android:layout_toEndOf="@+id/books_rank"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/books_author"
            android:id="@+id/books_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:text="@string/bookAuthor"
            android:layout_below="@+id/books_title"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/font_imperial_regular"
            android:layout_toStartOf="@+id/books_image"
            android:layout_toEndOf="@+id/books_rank"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/books_summary"
            android:ellipsize="end"
            android:id="@+id/books_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/bookSummary"
            android:maxLines="4"
            android:minLines="2"
            android:scrollHorizontally="true"
            android:layout_below="@+id/books_author"
            android:lineSpacingExtra="4sp"
            android:fontFamily="@font/font_imperial_regular"
            android:layout_toStartOf="@+id/books_image"
            android:layout_toEndOf="@+id/books_rank"/>
        <ImageView
            android:id="@+id/books_image"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="13dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/card_kabab_overflow"
        android:visibility="visible"
        android:layout_width="@dimen/overflow_width"
        android:layout_height="@dimen/overflow_height"
        android:layout_marginBottom="9dp"
        android:src="@null"
        android:rotation="90"
        android:layout_marginEnd="13dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_gravity="bottom"
        android:id="@+id/new_tag"
        android:layout_width="@dimen/new_tag_width"
        android:layout_height="@dimen/new_tag_height"
        android:src="@null"
        android:layout_below="@+id/books_summary"/>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
            <gradient
                android:startColor="@color/audio_thumb_background"
                android:endColor="@color/ds_transparent"
                android:angle="0"
                android:type="radial"
                android:gradientRadius="11dp"
                android:centerColor="@color/audio_thumb_background"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#ff979797"/>
            <size
                android:height="16dp"
                android:width="16dp"/>
            <solid android:color="#fff3f3f3"/>
        </shape>
    </item>
</layer-list>
